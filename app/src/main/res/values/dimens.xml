    <!-- calendar text size -->
    <dimen name="calendar_text_size_small">@dimen/t2</dimen>
    <dimen name="calendar_text_size_medium">@dimen/t1</dimen>
    <dimen name="calendar_text_size_large">@dimen/h1</dimen>
    <!-- end -->
</resources>
